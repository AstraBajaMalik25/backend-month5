model Store {
  id        Int      @id @default(autoincrement())
  name      String
  address   String?
  createdAt DateTime @default(now())
  deletedAt DateTime?

  userId    Int?       // ðŸ‘ˆ FK ke User (nullable dulu)
  user      User?    @relation(fields: [userId], references: [id])

  products Product[]

}